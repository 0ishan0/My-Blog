<%- include("partials/header") %>

<div class="ui main text container">
	<div class="ui huge header"><%= blog.title %></div>
	<div class="ui top attached segment">
		<div class="item">
			<img  class="ui centered rounded image" src="<%= blog.image %>" alt="Blog Image">
			<div class="content">
				<span><%= blog.created.toDateString() %></span>
			</div>
			<div class="description">
				<p><%= blog.body %></p>
			</div>
			<form action="/blogs/<%= blog._id %>/edit" method="GET">
				<button class="ui orange inverted button">Edit</button>
			</form>
			<form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
				<button class="ui red inverted button">Delete</button>
			</form>
		</div>
	</div>
</div>

<%- include("partials/footer") %>